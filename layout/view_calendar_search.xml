<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label_input_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/calendar_search_weight_input_date"
            android:text="@string/prompt_input_date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_input_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/calendar_search_weight_input_time"
            android:text="@string/prompt_input_time" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiogroup_day_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_day_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_1" />

        <RadioButton
            android:id="@+id/radio_day_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_2" />

        <RadioButton
            android:id="@+id/radio_day_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_both" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/yellow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_calendar_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textIsSelectable="true" />

        <CheckBox
            android:id="@+id/checkbox_show_almanac"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:background="#44FFFFFF"
            android:text="@string/show_almanac"
            android:textColor="@color/yellow"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/view_add_as_special_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/lightblue"
        android:text="@string/add_as_special_day"
        android:textColor="@color/black" />

</LinearLayout>