<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/week_day_monday"
            style="@style/curriculum_week_day"
            android:text="@string/full_monday" />

        <TextView style="@style/separator_week_prompt" />

        <TextView
            android:id="@+id/monday_morning"
            style="@style/curriculum_morning" />

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_11"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_11_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_12"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_12_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_morning" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_13"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_13_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_14"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_14_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_noon" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_15"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_15_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_16"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_16_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_17"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_17_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />
        
        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_18"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_18_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <TextView
            android:id="@+id/off_school_monday"
            style="@style/time_off_school" />

        <TextView style="@style/separator_class" />

        <TextView
            android:id="@+id/monday_evening"
            style="@style/curriculum_evening" />
    </LinearLayout>

    <TextView style="@style/separator_right" />

</RelativeLayout>