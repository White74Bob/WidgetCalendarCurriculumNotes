<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_special_days"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="1" >

    <TextView
        android:id="@+id/view_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
        android:background="@color/lightgray"
        android:text="@string/date_cn"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/view_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="@string/label_cn"
        android:textColor="@color/gray"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:background="@color/gray"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/view_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_cn"
            android:textColor="@color/lightblue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:visibility="gone"
            tools:ignore="SmallSp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_fold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lightgray"
            android:gravity="center_horizontal"
            android:text="@string/special_days_fold"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_unfold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lightblue"
            android:gravity="center_horizontal"
            android:text="@string/special_days_unfold"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</GridLayout>