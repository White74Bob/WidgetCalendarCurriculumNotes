                android:id="@+id/_22_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_morning" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_23"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_23_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_24"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_24_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_noon" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_25"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_25_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_26"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_26_location"
