        <TextView
            android:id="@+id/tuesday_morning"
            style="@style/curriculum_morning" />

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_21"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_21_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_22"
                style="@style/curriculum_course" />

