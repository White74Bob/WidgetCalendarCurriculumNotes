<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/view_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/lightgray"
        android:gravity="center_vertical"
        android:text="@string/date_cn"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/view_label"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/label_cn"
        android:textColor="@color/gray"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/view_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/type_cn"
            android:textColor="@color/lightblue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_other"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:visibility="gone"
            tools:ignore="SmallSp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/lightgray"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/special_day_delete"
            android:textColor="@color/firebrick"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/view_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/special_day_edit"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>