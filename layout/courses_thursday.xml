                android:id="@+id/_43_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_44"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_44_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_noon" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_45"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_45_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

