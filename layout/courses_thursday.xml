                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />
        
        <LinearLayout
            style="@style/curriculum_class"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/_48"
                style="@style/curriculum_course" />

            <TextView
                android:id="@+id/_48_location"
                style="@style/curriculum_course_location" />
        </LinearLayout>

        <TextView style="@style/separator_class" />

        <TextView
            android:id="@+id/off_school_thursday"
            style="@style/time_off_school" />

        <TextView style="@style/separator_class" />

        <TextView
            android:id="@+id/thursday_evening"
            style="@style/curriculum_evening" />
    </LinearLayout>

    <TextView style="@style/separator_right" />

</RelativeLayout>