<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_curriculum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/curriculum_layout_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/view_curriculum_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/prompt_demo_fill_curriculum"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/view_curriculum_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/arrow_left"
            android:textColor="@color/yellow"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/view_curriculum_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/arrow_right"
            android:textColor="@color/yellow"
            android:textStyle="bold" />
    </RelativeLayout>

    <include
        android:id="@+id/view_curriculum"
        layout="@layout/view_curriculum" />

</LinearLayout>